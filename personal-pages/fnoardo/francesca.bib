	Doi = {10.1007/s12518-016-0172-9},
	Journal = {APPLIED GEOMATICS},
	Keywords = {cartography, data harmonisation, DTM, orthophoto, digital maps, INSPIRE, ALCOTRA},
	Local-Url = {https://www.researchgate.net/publication/304064666_Cartographic_data_harmonisation_for_a_cross-border_project_development},
	Pages = {1--18},
	Publisher = {Springer},
	Title = {Cartographic data harmonisation for a cross-border project development},
	Url = {http://link.springer.com/article/10.1007/s12518-016-0172-9},
	Year = {2016},
	Bdsk-Url-1 = {http://link.springer.com/article/10.1007/s12518-016-0172-9},
